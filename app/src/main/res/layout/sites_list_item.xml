<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/imageview_thumb"
        android:layout_width="73dp"
        android:layout_height="68dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="7dp"
        android:contentDescription="@string/contact_thumb"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_person"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textview_name"
        android:layout_width="251dp"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/textview_descrip"
        app:layout_constraintLeft_toRightOf="@+id/imageview_thumb"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nombre del Sitio" />



    <TextView
        android:id="@+id/textview_descrip"
        android:layout_width="302dp"
        android:layout_height="97dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:maxLines="5"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageview_thumb"
        app:layout_constraintTop_toBottomOf="@+id/textview_name"
        tools:text="sus caractersticas" />


</androidx.constraintlayout.widget.ConstraintLayout>
