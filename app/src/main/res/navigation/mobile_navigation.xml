<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/poiListActivity">

    <activity
        android:id="@+id/poiListActivity"
        android:name="com.mintic.andariegos.list.PoiListActivity"
        android:label="activity_poi_list"
        tools:layout="@layout/activity_poi_list">
        <action
            android:id="@id/poiListActivity"
            app:destination="@id/detalleSitioActivity"
        />
    </activity>
    <activity
        android:id="@+id/detalleSitioActivity"
        android:name="com.mintic.andariegos.detalle.DetalleSitioActivity"
        android:label="DetalleSitioActivity" >
        <argument
            android:name="sitio"
            app:argType="com.mintic.andariegos.model.SitioItem" />
    </activity>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.mintic.andariegos.SettingsFragment"
        android:label="SettingsFragment" />
</navigation>